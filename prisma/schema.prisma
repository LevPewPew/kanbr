// docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String   @id @default(cuid())
  userId            String // next-auth requires camelCase
  type              String
  provider          String
  providerAccountId String // next-auth requires camelCase
  refresh_token     String?  @map("refresh_token") @db.Text
  access_token      String?  @map("access_token") @db.Text
  expires_at        Int?     @map("expires_at")
  token_type        String?  @map("token_type")
  scope             String?
  id_token          String?  @map("id_token") @db.Text
  session_state     String?  @map("session_state")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique // next-auth requires camelCase
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

enum CardStatus {
  READY
  IN_PROGRESS
  COMPLETE
}

model Card {
  id          String     @id @default(cuid())
  deckId      String     @map("deck_id")
  title       String
  description String?
  status      CardStatus @default(READY)
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  users       User[]
  Deck        Deck          @relation(fields: [deckId], references: [id])
  DecidedCard DecidedCard[]

  @@map("cards")
}

model DecidedCard {
  userId     String  @map("user_id")
  cardId     String  @map("card_id")
  interested Boolean
  matched    Boolean

  Card Card @relation(fields: [cardId], references: [id])
  User User @relation(fields: [userId], references: [id])

  @@id([cardId, userId])
  @@map("decided_cards")
}

model Deck {
  id        String @id @default(cuid())
  projectId String @map("project_id")

  Project Project @relation(fields: [projectId], references: [id])
  Cards   Card[]

  @@map("decks")
}

model Project {
  id          String  @id @default(cuid())
  title       String
  description String?

  Decks         Deck[]
  ProjectToUser ProjectToUser[]

  @@map("projects")
}

model ProjectToUser {
  projectId String @map("project_id")
  userId    String @map("user_id")

  Project Project @relation(fields: [projectId], references: [id])
  User    User    @relation(fields: [userId], references: [id])

  @@id([projectId, userId])
  @@map("project_to_user")
}

// FIXME 
// next-auth expects name and email to be optional. try keep this model 
// non-optional and modify next-auth type somehow
model User {
  id            String    @id @default(cuid())
  cardId        String?   @map("card_id")
  name          String
  email         String    @unique
  emailVerified DateTime? // next-auth requires camelCase
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  card          Card?           @relation(fields: [cardId], references: [id])
  DecidedCard   DecidedCard[]
  ProjectToUser ProjectToUser[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([identifier, token])
  @@map("verification_tokens")
}

